@model YemekTuru

<form method="post">

	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Yemek Türü Ekle</h2>
			</hr>
		</div>

		<div class="mb-3">
			<label asp-for="Ad" class="p-0"></label>
			<input asp-for="Ad" class="form-control" />
