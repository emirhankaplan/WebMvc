@model Yemek

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Yemek Güncelle</h2>
			</hr>
		</div>

		<div class="mb-3">
			<label asp-for="YemekAdi" class="p-0"></label>
			<input asp-for="YemekAdi" class="form-control" />
			<span asp-validation-for="YemekAdi" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Tanim" class="p-0"></label>
			<input asp-for="Tanim" class="form-control" />
			<span asp-validation-for="Tanim" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Fiyat" class="p-0"></label>
			<input asp-for="Fiyat" class="form-control" />
			<span asp-validation-for="Fiyat" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-success" style="width:250px">Yemek Güncelle</button>

		<a asp-controller="Yemek" asp-action="Index" class="btn btn-success" style="width:250px">
			Yemeklere Geri Dön
		</a>

	</div>


</form>